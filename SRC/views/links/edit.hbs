<body>
  <div class="container p-4">
    <div class="row">
      <div class="col s12 m6 l4 offset-m3 offset-l4">
        <div class="card">
          <div class="card-content">
            <form action="/links/edit/{{link.PKMOV_NCODIGO}}" method="POST">
              <div class="input-field">
                <input type="text" name="title" class="validate" placeholder="Title" value="{{link.MOV_CTITLE}}" autofocus>
                <label for="title">Title</label>
              </div>
              <div class="input-field">
                <input type="text" name="director" class="validate" placeholder="Director" value="{{link.MOV_CDIRECTOR}}">
                <label for="director">Director</label>
              </div>
              <div class="input-field">
                <input type="text" name="year" class="validate" placeholder="Year" value="{{link.MOV_CYEAR}}">
                <label for="year">Year</label>
              </div>
              <div class="input-field">
                <input type="number" name="rating" min="1" max="5" class="validate" placeholder="Rate 1-5" value="5">
                <label for="rating">Rating</label>
              </div>
              <p>
                <label>
                  <input type="checkbox" name="seen" value="1">
                  <span>Did you watch the movie?</span>
                </label>
              </p>
              <div class="input-field">
                <textarea name="description" class="materialize-textarea" placeholder="Description">{{link.MOV_CDESCRIPTION}}</textarea>
                <label for="description">Description</label>
              </div>
              <div class="input-field">
                <button class="btn waves-effect waves-light" type="submit" name="action">Save
                  <i class="material-icons right">save</i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>